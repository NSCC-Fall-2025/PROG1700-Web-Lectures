    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run Deno with Arguments",
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all",
                "${file}",
            ],
            "args": [
                "purpleheart"
            ],
            "attachSimplePort": 9229
        },
                {
            "request": "launch",
            "name": "Run Deno with 2 Arguments",
            "type": "node",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all",
                "${file}",
            ],
            "args": [
                "purpleheart",
                "santa"
            ],
            "attachSimplePort": 9229
        }
    ]
}